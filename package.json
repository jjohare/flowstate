{
  "name": "tai-chi-flow",
  "version": "1.0.0",
  "description": "Tai Chi motion capture and training application with flow state detection",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently -k -p \"[{name}]\" -n \"BACKEND,REACT,ELECTRON\" -c \"bgBlue.bold,bgGreen.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:backend": "cd backend && python app.py",
    "dev:react": "cross-env BROWSER=none REACT_APP_API_URL=http://localhost:5000 react-scripts start",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "react-scripts build",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:all": "npm run build && electron-builder -mwl",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "react-scripts test",
    "test:backend": "cd backend && python test_backend.py",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist build node_modules package-lock.json",
    "clean:install": "npm run clean && npm install"
  },
  "build": {
    "appId": "com.flowstate.taichi",
    "productName": "Tai Chi Flow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "backend/**/*",
      "models/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models"
      },
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "@tensorflow/tfjs": "^4.15.0",
    "@tensorflow/tfjs-node": "^4.15.0",
    "@types/three": "^0.158.0",
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^10.16.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1",
    "three": "^0.158.0",
    "web-vitals": "^3.5.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}